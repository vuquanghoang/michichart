{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "",
    "rootDir": "./",
    "outDir": "lib",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "declarationDir": "lib",
    "allowJs": true,
    "skipLibCheck": true,
//    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "paths": {
    "modules": ["./src/charts"],
    "themes/*": ["./src/themes"],
//    "mockData": ["./src/mockData"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "stories"
  ]
}